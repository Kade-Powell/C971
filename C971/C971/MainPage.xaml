    <StackLayout Margin="5" x:Name="CurrentTermsLayout">
        <Button x:Name="NewTermButton" Text="+ New Term"  BackgroundColor="#2196F3" TextColor="White" Clicked="NewTermButton_Clicked"/>
    </StackLayout>
        

</ContentPage>

