<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="C971.TermEditModal">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" >
        <Frame BackgroundColor="LightGray" Margin="0" Padding="10">
            <Label x:Name="HeaderLabel" Text="term edit..." HorizontalTextAlignment="Center" TextColor="Black" FontSize="30"/>
        </Frame>
        

        <Label>Term Title</Label>
        <Entry x:Name="TermTitle" Placeholder="..." />

        <Label>Term Start Date</Label>
        <DatePicker x:Name="TermStart"/>

        <Label>Term End Date</Label>
        <DatePicker x:Name="TermEnd"/>

        <Button x:Name="SubmitTermButton" Text="Submit"  BackgroundColor="#2196F3" TextColor="White" Clicked="SubmitTermButton_Clicked"/> 

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

