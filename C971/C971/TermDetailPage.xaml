<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="C971.TermDetailPage">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Vertical" >
            <Label x:Name="HeaderLabel" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout Margin="10">
        <Label Text="Courses" FontSize="30"  TextColor="Black"/>
        <Grid HorizontalOptions="CenterAndExpand">
         
            <Button Grid.Column="0" x:Name="EditTermButton" Text="Edit Term" BackgroundColor="LightSkyBlue"  Clicked="EditTermButton_Clicked"/>
            <Button Grid.Column="1" x:Name="DropTermButton" Text="Drop Term" BackgroundColor="Salmon" Clicked="DropTermButton_Clicked" />
        </Grid>

        <Grid x:Name="CourseGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.33*" />
                <RowDefinition Height="0.33*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>

        </Grid>

    </StackLayout>
</ContentPage>

